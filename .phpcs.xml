<?xml version="1.0"?>
<ruleset name="Symfony Project">
  <description>Code style for Symfony project</description>

  <rule ref="Symfony">
    <exclude name="Symfony.Commenting.ClassComment"/>
    <exclude name="Symfony.Commenting.FunctionComment"/>
    <exclude name="Symfony.Commenting.License"/>
  </rule>

  <file>src</file>
  <file>tests</file>

  <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
